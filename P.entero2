// Aqui se importa la libreria estandar de entradas y salida
#include <stdio.h>

// Se define la funcion principal la cual devuelve un tipo de dato
int main() {
    // Definimos una variable entera llamada zy 👍
    int zy = 42;
    // Definimos un puntero el cual hace referencua a la variable zy 👍
    int *un_puntero = &zy;
// se la manda la direccion de la variable zy 👍
    int *puntero_entero = (int*)un_puntero; // convertir a puntero a entero
    printf("Valor: %d\n", *puntero_entero); // Se imprime el valor de la variable zy 👍
    printf("La direccion es: %p \n", *puntero_entero); // Se imrpime la direccion de la variable zy 👍
    return 0;
}
